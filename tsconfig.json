{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": [
      "chrome"
    ]
  },
  "include": [
    "extension/**/*",
    "vite.config.ts",
    "global.d.ts"
  ]
}